<section class="restaurant-head" role="banner">
  <div class="container-fluid">
    <div class="col-sm-12 col-md-4 col-md-offset-2 clearfix">
      <div class="top">
        <h1>Restaurants</h1>
      </div>
    </div>
    <div class="row scroll-down">
      <div class="col-xs-12">
        <a href="#swim-show" class="scroll-anchor"><p>scroll down</p>
        <p class="font-a"><i class="fa fa-angle-down fa-2x"></i></p></a>
      </div>
    </div>
  </div>
</section>

<section class="restaurant-content" id="swim-show">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <h1>Design District | Midtown | Wynwood</h1>
      </div>
    </div>
    <div class="delimiter100"></div>
    <div class="row">
      <% @restaurant_dmw.each do |r| %>
        <div class="col-sm-4">
          <div class="box">
            <h3><%= r.name %></h3>
            <p><%= r.address %></p>
            <p><%= r.phone %></p>
            <p class="hover"><%= r.description %></p>
          </div>
        </div>
      <% end %>
    </div>
    <%= will_paginate @restaurant_dmw %>
  </div>
</section>

<section class="restaurant-content2" style="background:#f7f7f7;">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <h1>Miami Beach</h1>
      </div>
    </div>
    <div class="delimiter100"></div>
    <div class="row">
      <% @restaurant_mb.each do |r| %>
        <div class="col-sm-4">
          <div class="box">
            <h3><%= r.name %></h3>
            <p><%= r.address %></p>
            <p><%= r.phone %></p>
            <p class="hover"><%= r.description %></p>
          </div>
        </div>
      <% end %>
    </div>
    <%= will_paginate @restaurant_mb %>
  </div>
</section>
