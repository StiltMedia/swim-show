        </div>
        <div class="row">
          <div class="col-xs-12 col-sm-6">
              <h1><%= t('special_events.swim')%></h1>
              <p><%= t('special_events.swim_date')%><br><%= t('special_events.swim_time')%></p>
              <br>
              <a href="#" id ="lounge" class="btn btn-member"><%= t('special_events.btn') %></a>
              <br>
          </div>
          <div class="col-xs-12 col-sm-6">
              <h1><%= t('special_events.fashion')%></h1>
              <p><%= t('special_events.fashion_local')%></p>
              <br>
              <a href="#" id="swimimg" class="btn btn-member top-link"><%= t('special_events.btn') %></a>
              <a href="#" id="swimvid" class="btn btn-member"><%= t('special_events.btn_vid') %></a>
              <br>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-12 col-sm-6">
              <h1><%= t('special_events.tech')%></h1>
              <p><%= t('special_events.coming_soon') %></p>
          </div>
          <div class="col-xs-12 col-sm-6">
              <h1><%= t('special_events.art')%></h1>
              <p><%= t('special_events.coming_soon') %></p>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-12 col-sm-6">
            <h1><%= t('special_events.tea')%></h1>
            <p><%= t('special_events.tea_date')%><br><%= t('special_events.tea_time')%></p>
            <br>
            <!-- <a href="#" id="high-tea" class="btn btn-member">View 2014 Images</a> -->
