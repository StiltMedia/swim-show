        <div class="row">
          <div class="col-xs-12 col-sm-6">
              <h1><%= t('special_events.breakfast') %></h1>
              <p><%= t('special_events.breakfast_date')%><br><%= t('special_events.breakfast_time')%></p>
              <br>
