<section class="showdates-head" role="banner">
  <div class="bkg"></div>
  <div class="container-fluid">
    <div class="row">
      <div class="col-xs-12 col-sm-10 col-sm-offset-1">
        <div class="col-xs-12 col-sm-6">
          <div class="top">
            <h1><%= t('show_dates.title')%></h1>
            <p><%= t('show_dates.sub_title')%></p>
            <p class="como"><%= t('show_dates.date_span')%></p>
          </div>
        </div>
      </div>
    </div>
    <!-- <div class="row scroll-down">
      <div class="col-xs-12">
        <a href="#swim-show" class="scroll-anchor"><p>scroll down</p>
        <p class="font-a"><i class="fa fa-angle-down fa-2x"></i></p></a>
      </div>
    </div> -->
  </div>	<!-- end container -->
</section>

<section class="dates" id="swim-show">
  <div class="container-fluid">
    <div class="row">
      <div class="col-xs-12 col-sm-10 col-sm-offset-1">
        <div class="col-sm-6">
          <h2><%= t('show_dates.sec_two_title')%></h2>
          <h3><%= t('show_dates.sec_two_date')%></h3>
          <p><%= t('show_dates.sec_two_sum')%></p>
          <p><strong><%= t('show_dates.hours')%><br><%= t('show_dates.time_date')%><br><%= t('show_dates.time_date_two')%></strong></p>
          <p><%= t('show_dates.sec_two_final_sum')%></p>
        </div>
        <div class="col-sm-6">
          <%= image_tag 'https://s3.amazonaws.com/swim-show/Website+Images/headers/miami-beach.jpg', class: 'img-responsive' %>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="section-counter" id="swim">
  <div class="ce-countdown ce-countdown--theme-1">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-12">
          <h2><%= t('overview.ready')%></h2>
        </div>
      </div>
      <div class="delimiter100"></div>
      <div class="row">
        <div class="col-sm-10 col-sm-offset-1">
          <div class="col-sm-3"><span class="ce-days"></span><br><h6 class="ce-days-label sub-info"></h6></div>
          <div class="col-sm-3"><span class="ce-hours"></span><br><h6 class="ce-hours-label sub-info"></h6></div>
          <div class="col-sm-3"><span class="ce-minutes"></span><br><h6 class="ce-minutes-label sub-info"></h6></div>
          <div class="col-sm-3"><span class="ce-seconds"></span><br><h6 class="ce-seconds-label sub-info"></h6></div>
        </div>
      </div>
      <div class="delimiter100"></div>
      <div class="row">
        <div class="col-sm-8 col-sm-offset-2">
          <div class="top-headline">
            <h3><em> <%= t('overview.clock_enjoy') %><strong><%= t('overview.clock_swim')%> </strong></em></h3>
          </div> <!-- end headline -->
        </div> <!-- end col-sm-8 -->
      </div>
    </div>
  </div>
</section>

<section class="dates-btm" id="btm">
  <div class="container">
    <div class="row">
      <div class="col-sm-12">
        <h1><%= t('show_dates.future_dates') %></h1>
        <p><%= t('show_dates.tba') %></p>
      </div>
    </div>
  </div>
</section>


<script>
  $(document).ready(function() {
    $('.ce-countdown').countEverest({
      //Set your target date here!
      day: 18,
                month: 7,
      year: 2015,
      pluralLabels: true
    });
  });
</script>
