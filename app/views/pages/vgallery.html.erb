<section class="vgallery">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <h1>Lines Gallery</h1>
      </div>
    </div>
    <div class="row">
      <% @vendor.each do |v| %>
        <div class="col-sm-4">
          <a href="#" id="open_in_modal"><%= image_tag v.logo.url(:thumb) %></a>
        </div>
      <% end %>
    </div>
    <%= will_paginate @vendor %>
  </div>
</section>



<script type="text/javascript">
jQuery(document).ready(function($) {
  $('#open_in_modal').bind('click', function(event) {
    // stops default click behavior
    event.preventDefault();

    $.iLightBox(
      [
        <% @vendor.each do |v| %>
        <% v.pictures.each do |img| %>
        {
          url: "<%= img.image.url(:retina) %>",
          type: 'image'
        },
        <% end %>
        <% end %>
      ],
      {
        skin: 'metro-black',
        startFrom: 0,
        overlay: {
          opacity: 0.7
        }
      }
    );
  });
});
</script>
