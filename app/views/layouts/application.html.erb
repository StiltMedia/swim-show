<!DOCTYPE html>
<html>
<head>
  <title>SwimShow</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
  <%= csrf_meta_tags %>
</head>
<body>

  <!-- Page Loader -->
  <div class="page-loader">
    <%= image_tag 'https://s3.amazonaws.com/swim-show/Website+Images/loader.gif', alt: 'loader' %>
  </div>

  <div class="ody-menu">

    <!-- ODY TRIGGER -->
    <div class="ody-trigger"><i class="fa fa-align-justify"></i></div>

    <!-- ODY MAIN MENU -->
    <ul class="ody-main-menu">
      <li><a href="#" class="dropdown">Swimshow <i class="fa fa-caret-down"></i></a>
        <ul>
          <li><%= link_to 'Overview', swimshow_path %></li>
          <li><%= link_to 'Show Dates', show_dates_path %></li>
          <li><%= link_to 'Special Events', special_events_path %></li>
          <li><a target="_blank" href="https://s3.amazonaws.com/swim-show/Website+Images/FLOOR-PLAN-2015.pdf">Floor Plan</a></li>
          <li><%= link_to 'Exhibitors', exhibitors_path %></li>
          <li><%= link_to 'Retailers', retailers_path %></li>
          <li><%= link_to 'Media', media_path %></li>
          <li><%= link_to 'Travel', travel_path %></li>
        </ul>
      </li>
      <li><%= link_to 'Current Lines', current_lines_path %></li>
      <li><%= link_to 'Gallery', gallery_path %></li>
      <li><%= link_to 'Classifieds', classifieds_path %></li>
      <li><%= link_to 'West Coast Regional', west_coast_regional_path %></li>
      <li><%= link_to 'About Us', about_path %></li>
      <li><%= link_to 'Contact', contact_path %></li>
    </ul>

    <!-- ODY SOCIAL -->
  </div>


  <%= render 'layouts/header' %>

  <div class="ody-content">

    <%= yield %>

    <%= render 'layouts/footer' %>

  </div>

</body>
</html>
